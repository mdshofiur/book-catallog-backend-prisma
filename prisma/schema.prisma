datasource db {
  url      = env("DATABASE_URL")
  provider = "postgresql"
}

generator client {
  provider = "prisma-client-js"
}


model User {
  id         String       @id @default(uuid()) // Generates a UUID
  name       String
  email      String       @unique
  password   String
  role       String       // You can add an enum for 'admin' or 'customer'
  contactNo  String?
  address    String?
  profileImg String?
}

